<masters>
  <master idx="0" appTimePeriod="1000000" refClockSyncCycles="1">

    <slave
      idx="0"
      type="generic"
      vid="36"
      pid="0x00242C04"
      configPdos="true">

      <!-- Sync Manager 2: Outputs (Master → Drive) -->
      <syncManager idx="2" dir="out">
        <pdo idx="0x1600">
          <pdoEntry
            idx="0x6040"
            subIdx="0"
            bitLen="16"
            halPin="controlword"
            halType="u32"/>

          <pdoEntry
            idx="0x607A"
            subIdx="0"
            bitLen="32"
            halPin="target-position"
            halType="s32"/>
        </pdo>
      </syncManager>

      <!-- Sync Manager 3: Inputs (Drive → Master) -->
      <syncManager idx="3" dir="in">
        <pdo idx="0x1A00">
          <pdoEntry
            idx="0x6041"
            subIdx="0"
            bitLen="16"
            halPin="statusword"
            halType="u32"/>

          <pdoEntry
            idx="0x6064"
            subIdx="0"
            bitLen="32"
            halPin="actual-position"
            halType="s32"/>
        </pdo>
      </syncManager>

    </slave>
  </master>
</masters>
